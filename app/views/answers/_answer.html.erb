<div
  id=<%= "guessed_#{dom_id(answer.guessed_participant)}" %>
  <%- if answer.round_completed? -%>
    class="list-group-item list-group-item-<%= answer.correct? ? "success" : "danger" %>"
  <%- else -%>
    class="list-group-item"
  <%- end -%>
  data-swap-target="group">
  <div class="d-flex w-100 justify-content-between">
    <%- if answer.round_completed? -%>
      <div class="d-flex flex-wrap">
        <h5 class="mb-1"><%= answer.participant.name %></h5>
        <%- unless answer.correct? -%>
          <h5 class="mb-1">
            <s class="ms-2"><%= answer.guessed_participant.name %></s>
          </h5>
        <%- end -%>
      </div>
      <%- if answer.correct? -%>
        <i class="bi bi-check-lg"></i>
      <%- else -%>
        <i class="bi bi-x-lg small"></i>
      <%- end -%>
    <%- else -%>
      <h5 class="mb-1"><%= answer.guessed_participant.name %></h5>
    <%- end -%>
  </div>
  <div
    class="swap-item mb-1 p-2 w-100 bg-light border rounded d-flex align-items-center"
    data-id="<%= answer.id %>">
    <div class="swap-handle me-1">
      <i class="bi bi-grip-vertical"></i>
    </div>
    <div><%= answer.value %></div>
  </div>
</div>
